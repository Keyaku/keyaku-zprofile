# Get function name relative to current function. Accepts int to reach higher levels if necessary

emulate -L zsh

local idx=2
# Test if argument is an integer and within bounds
if [[ "$1" == <-> ]] && (( 0 < $1 <= ($#funcstack - $idx + 1) )); then
	idx=$((idx + $1))
fi

if [[ ! -z "${funcstack[$idx]}" ]]; then
	echo "${funcstack[$idx]}"
fi
